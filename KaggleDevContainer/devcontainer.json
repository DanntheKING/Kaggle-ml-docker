{
    "name": "Kaggle ML Dev Container (GPU)",
    "dockerFile": "Dockerfile",
    "context": "..",
    "appPort": [8888],
    "workspaceFolder": "/app",
    "runArgs": ["--gpus", "all"],
    "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3"
    },
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-vscode-remote.remote-containers"
    ],
    "remoteUser": "root"
}
